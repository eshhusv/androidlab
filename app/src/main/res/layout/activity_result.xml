<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/reversedTextView"
        android:layout_width="191dp"
        android:layout_height="92dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215" />

    <Button
        android:id="@+id/Ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reversedTextView"
        app:layout_constraintVertical_bias="0.878" />

    <CheckBox
        android:id="@+id/lowerCaseCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Lower Case"
        app:layout_constraintBottom_toTopOf="@+id/toReverse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reversedTextView"
        app:layout_constraintVertical_bias="0.472" />

    <CheckBox
        android:id="@+id/upperCaseCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="Upper Case"
        app:layout_constraintBottom_toTopOf="@+id/toReverse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reversedTextView"
        app:layout_constraintVertical_bias="0.472" />

    <Button
        android:id="@+id/toReverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reverse"
        app:layout_constraintBottom_toTopOf="@+id/Ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reversedTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>